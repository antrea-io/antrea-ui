FROM docker.io/library/golang:1.19 as build-go
WORKDIR /app

COPY go.mod .
COPY go.sum .
RUN go mod download

COPY apis ./apis
COPY pkg ./pkg
COPY cmd ./cmd
COPY Makefile .
COPY *.mk .
COPY VERSION .
COPY .git ./.git

RUN CGO_ENABLED=0 make bin

FROM gcr.io/distroless/static:nonroot

USER 65532:65532

COPY --from=build-go /app/bin/server /app/server

ENV APP_ENV=production

ENTRYPOINT [ "/app/server" ]
